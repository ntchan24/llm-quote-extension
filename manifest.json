{
  "manifest_version": 3,
  "name": "LLM Quote Reply",
  "version": "1.0",
  "description": "Select text in an LLM response to quote it in your next prompt.",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": [
    "*://claude.ai/*",
    "*://chat.deepseek.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
} 